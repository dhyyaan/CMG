<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="project"
            type="com.think360.cmg.model.work.Data" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutSingleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="4">


            <com.think360.cmg.utils.customfonts.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{project.projectName}"

                />

            <com.think360.cmg.utils.customfonts.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{project.startDate}"

                />

            <com.think360.cmg.utils.customfonts.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{project.clientName}"

                />

            <com.think360.cmg.utils.customfonts.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{project.endDate}"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/appGray" />
    </LinearLayout>
</layout>